{% extends 'base.html.twig' %}

{% block body %}
    <h1>Kelurahan</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ kelurahan.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ kelurahan.name }}</td>
            </tr>
            <tr>
                <th>Lurah</th>
                <td>{{ kelurahan.lurah }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ kelurahan.phone }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ kelurahan.address }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('kelurahan_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('kelurahan_edit', { 'id': kelurahan.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
